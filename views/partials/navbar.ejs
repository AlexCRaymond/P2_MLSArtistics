<div class="nav">
 <div class="nav-header">
  <div class="nav-left">
      <a href="/" class="nav-link">Home</a>
</div>
<div class="nav-center"></div>
    <div class="nav-right">
    <p class="nav-link" id="about">About</p>
    <p class="nav-link" id="shopLink">Shop</p>
    <p class="nav-link">Art Cart</p>
    <% if(username) { %> 
        Hello <%= username %>
    <% } else {  %> 
        <a href="/auth/login" class="nav-link">Login/Register</a>
    <% } %>
    <% if(isLogged) { %>
        <a href="auth/logout">Log Out</a>
    <% } %>   

    <div class="hamburger-menu">
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
    </div>
  </div>
 </div>
 <div class="overlay">
     <div class="overlay-content">
         <a href="#" class="overlay-link">About</a>
         <a href="#" class="overlay-link">Shop</a>
         <a href="#" class="overlay-link">Art Cart</a>
         <a href="#" class="overlay-link">Login/Register</a>
     </div>
 </div>
</div>
<script>
    const hamburgerMenu = document.querySelector('.hamburger-menu')
    const shopLink = document.querySelector('#shopLink');
    const overlay = document.querySelector('.overlay')
    hamburgerMenu.addEventListener('click', (e) => {
        e.currentTarget.classList.toggle('open')
        overlay.classList.toggle('show')
    })

    shopLink.addEventListener('click', function() {
        window.scrollTo({
        top: 235, 
        bottom: 0,
        behavior: 'smooth',
        })
    });
</script>
  